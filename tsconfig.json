{
    "compilerOptions": {
      "jsx": "react",
      "noImplicitAny": true,
      "outDir": "build/types",
      "module": "esnext",
      "target": "es5",
      "allowJs": true,
      "sourceMap": true,
      "noEmit": false,
      "declaration": true,
      "suppressImplicitAnyIndexErrors": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
    },
    "files": [
      "global.d.ts"
    ],
    "include": ["src"],
    "exclude": ["src/**/tests"],
}