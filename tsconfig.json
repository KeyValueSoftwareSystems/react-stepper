{
    "compilerOptions": {
      "jsx": "react",
      "noImplicitAny": true,
      "outDir": "build/types",
      "module": "esnext",
      "target": "es5",
      "allowJs": true,
      "sourceMap": true,
      "noEmit": false,
      "declaration": true,
      "suppressImplicitAnyIndexErrors": true,
      "ignoreDeprecations": "5.0",
      "allowSyntheticDefaultImports": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
      "strictNullChecks": true,
      "esModuleInterop": true
    },
    "files": [
      "global.d.ts"
    ],
    "include": ["src"],
    "exclude": ["src/**/tests"],
}